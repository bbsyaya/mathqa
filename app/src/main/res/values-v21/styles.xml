<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay." parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/material_color_amber_500</item>
        <item name="android:textColor">@color/material_color_white</item>
    </style>


    <style name="MathQaButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/material_color_amber_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">@dimen/material_button_corner_radius</item>
        <item name="android:height">@dimen/material_button_touch_target_height_minimum</item>
        <item name="android:minHeight">@dimen/material_button_height_minimum</item>
        <item name="android:textSize">@dimen/material_typography_regular_button_text_size</item>
        <item name="android:textColor">@color/material_typography_primary_text_color_light</item>
        <item name="android:elevation" tools:targetApi="lollipop">
            @dimen/material_button_raised_elevation_resting
        </item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/material_color_amber_500</item>
        <item name="colorPrimaryDark">@color/material_color_blue_700</item>
        <item name="colorPrimary">@color/material_color_blue_500</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- For selection -->
        <item name="selectableItemBackground">@drawable/selector_item_light</item>

        <!-- Spinner -->
        <item name="android:spinnerStyle">@style/Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

</resources>
