<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/material_color_amber_500</item>
        <item name="colorPrimaryDark">@color/material_color_blue_700</item>
        <item name="colorPrimary">@color/material_color_blue_500</item>
    </style>

    <style name="SelectSubjectButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/material_color_amber_500</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:radius">@dimen/material_button_corner_radius</item>
        <item name="android:height">@dimen/material_button_touch_target_height_minimum</item>
        <item name="android:minHeight">@dimen/material_button_touch_target_height_minimum</item>
        <item name="android:textSize">@dimen/material_typography_regular_button_text_size</item>
        <item name="android:textColor">@color/material_typography_primary_text_color_light</item>
        <item name="android:elevation" tools:targetApi="lollipop">
            @dimen/material_button_raised_elevation_resting
        </item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
