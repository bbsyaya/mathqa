<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="dekauliya.fyp.mathqa">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES"
        android:value="ocr"/>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="False"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity_">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dekauliya.fyp.mathqa.MainActivity"/>
        </activity>
        <activity
            android:name=".SelectSubjectActivity"
            android:label="@string/title_activity_select_subject"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ConceptListActivity"
            android:label="@string/title_activity_browse_learning_concepts"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".LogoutActivity"
            android:label="@string/title_activity_logout"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ImageCaptureActivity"
            android:label="@string/title_activity_image_capture"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".EnterTextActivity"
            android:label="@string/title_activity_enter_text"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".InsertFormulaActivity"
            android:label="@string/tf_insert_formula"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".QuestionListActivity"
            android:label="@string/title_activity_question_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".QuestionActivity"
            android:label="@string/title_activity_question"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ConceptActivity"
            android:label="@string/title_activity_learning_concept"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>
        <activity android:name=".CropActivity">
        </activity>
        <activity android:name=".RestApiActivity">
        </activity>
        <activity
            android:name=".ImagePreviewActivity_"
            android:label="@string/title_activity_image_preview"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dekauliya.fyp.mathqa.MainActivity_" />
        </activity>
    </application>

</manifest>